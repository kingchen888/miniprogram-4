.box {
    height: 60px;
    /* background-color: skyblue; */
    /* margin-top: 10px; */
    position: relative;
}
.box .button {
    width: 100%;
    height: 100%;
    background-color: rgb(207, 207, 207);
}
.box .image {
    height: 50px;
    width: 50px;
    position: absolute;
    top: 5px;
    left: 10px;
    border-radius: 50%;
}
.box .name {
    position: absolute;
    width: 150px;
    height: 40px;
    left: 20px;
    line-height: 40px;
    /* background-color: #fff; */
}
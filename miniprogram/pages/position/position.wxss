/* 页面 */
page{
  height: 100%;
}
/* 地图 */
.map{
  width: 100%;
  height: 600px;
}
/* flex盒子，调整布局 */
.box{
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 18px;
  background-color: #f7f7f7;
}
/* 导航方式选择框 */
.box view{
  width: 70px;
  height: 40px;
  line-height: 35px;
  border: 2px solid #87CEEB;
  border-radius: 10px;
  text-align: center;
}
/* 地址输入框 */
.one{
  display: inline-block;
  width: 160px;
  height: 20px;
  display: inline-block;
  padding: 10px;
  margin: 5px;
  font-size: 18px;
  border: 2px solid #87CEEB;
  border-radius: 10px;
}
/* 按钮样式 */
.two{
  background-color: #87CEEB;
  color: #ffffff;
  border-radius: 10px;
}
.button{
  display: flex;
  justify-content: space-between;
  margin: 10px;
}
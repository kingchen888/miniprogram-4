/* 轮播图样式 */
swiper {
    height: 400rpx;
    margin: 10px 10px 0 10px;
    border: 2px solid #87CEEB;
    border-radius: 10px;
}
swiper image {
    width: 100%;
    height: 100%;
}
/* 科普盒子 */
.box {
    margin: 30px 10px 0 10px;
    padding: 10px 10px;
    border: 3px skyblue solid;
    border-radius: 10px;
    box-shadow: 3px 3px #87CEEB;
}
/* 科普标题 */
.box1 {
    border-bottom: 2px skyblue dashed;
    padding-bottom: 10px;
    color: rgb(136, 175, 211);
    font-size: 22px;
}
/* 科普时间 */
.box2 {
    margin-top: 5px;
    padding-bottom: 5px;
    border-bottom: 2px skyblue dashed;
    font-size: 18px;
}
/* 科普有关科室 */
.box3 {
    margin-top: 5px;
    font-size: 18px;
}